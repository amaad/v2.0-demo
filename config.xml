<?xml version='1.0' encoding='utf-8'?>
<widget id="cordova.google.maps" version="2.2.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CordovaGoogleMaps</name>
    <description>
      Demo project for cordova-googlemaps-plugin.
    </description>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^6.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-googlemaps" spec="https://github.com/mapsplugin/cordova-plugin-googlemaps#pgb_test">
        <variable name="API_KEY_FOR_ANDROID" value="AIzaSyDvnRSZojW-ar0t8sWgfsqyxY3RT3wJEyM" />
        <variable name="API_KEY_FOR_IOS" value="AIzaSyDvnRSZojW-ar0t8sWgfsqyxY3RT3wJEyM" />
        <variable name="PLAY_SERVICES_VERSION" value="11.8.0" />
        <variable name="LOCATION_WHEN_IN_USE_DESCRIPTION" value="Show your location on the map" />
        <variable name="LOCATION_ALWAYS_USAGE_DESCRIPTION" value="Trace your location on the map" />
    </plugin>
    
    <!--phonegap build settings -->
    <preference name="android-build-tool" value="gradle" />
    <preference name="phonegap-version" value="cli-8.0.0" />
</widget>
